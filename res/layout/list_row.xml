<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
	android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_marginBottom="2dp" android:layout_marginLeft="2dp"
	android:orientation="vertical">
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal">

		<ImageView android:id="@+id/find_image" android:src="@drawable/person_icon"
			android:adjustViewBounds="true" android:layout_width="50px"
			android:layout_height="50px" />
		<TextView android:id="@+id/name_id" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:singleLine="true"
			android:textSize="20dp" android:layout_marginLeft="3dp"
			android:layout_marginRight="70dp" android:layout_toRightOf="@id/find_image"
			android:layout_alignParentTop="true" />

		<TextView android:id="@+id/status" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="13dp"
			android:layout_alignTop="@id/name_id"
			android:layout_alignParentRight="true" />

		<TextView android:id="@+id/description_id"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_below="@id/name_id" android:singleLine="true"
			android:textSize="13dp" android:layout_marginLeft="3dp"
			android:layout_marginRight="50dp" android:layout_toRightOf="@id/find_image"
			android:layout_marginBottom="3dp" />

		<TextView android:id="@+id/num_photos" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="13dp"
			android:layout_below="@id/status" android:layout_alignTop="@id/description_id"
			android:layout_alignParentRight="true" android:visibility="gone" />

		<!-- android:layout_toRightOf="@id/find_image"/>-->
		<TextView android:id="@+id/latitude_id" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_marginLeft="3dp"
			android:layout_marginTop="3dp" android:layout_below="@id/find_image"
			android:textSize="13dp" />

		<TextView android:id="@+id/longitude_id"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_below="@id/find_image" android:layout_toRightOf="@id/latitude_id"
			android:layout_marginTop="3dp" android:layout_marginLeft="3dp"
			android:textSize="13dp" />

		<TextView android:id="@+id/row_id" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_alignTop="@id/longitude_id"
			android:layout_alignParentRight="true" android:layout_marginRight="5dp"
			android:textSize="13dp" android:visibility="gone" />
			
		<TextView android:id="@+id/idNumberText" android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_marginLeft="2dp"
			android:layout_marginRight="2dp" 
			android:layout_below="@id/status" android:textSize="13dp"
			android:layout_alignParentRight="true"
			android:layout_alignTop="@id/longitude_id"/>
	</RelativeLayout>
</LinearLayout>