<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<ScrollView android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:orientation="vertical" android:scrollbars="vertical|horizontal"
			android:visibility="visible" android:id="@+id/unedit">
			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:orientation="vertical" android:scrollbars="vertical|horizontal">
				<TextView android:id="@+id/first_label" android:text="@string/firstname"
					android:textColor="#ffffff" android:layout_width="fill_parent"
					android:textSize="15dp" android:layout_height="wrap_content" />

				<TextView android:id="@+id/last_label" android:text="@string/lastname"
					android:textColor="#ffffff" android:layout_width="fill_parent"
					android:textSize="15dp" android:layout_height="wrap_content" />

				<TextView android:id="@+id/address_label" android:text="@string/address"
					android:textColor="#ffffff" android:layout_width="fill_parent"
					android:textSize="15dp" android:layout_height="wrap_content" />

				<TextView android:id="@+id/dob_label" android:text="@string/dob"
					android:textColor="#ffffff" android:layout_width="fill_parent"
					android:textSize="15dp" android:layout_height="wrap_content" />

				<TextView android:id="@+id/sex_label" android:text="@string/sex"
					android:textColor="#ffffff" android:layout_width="fill_parent"
					android:textSize="15dp" android:layout_height="wrap_content" />

				<TextView android:id="@+id/num_ppl_label" android:text="@string/Number_of_people_in_home"
					android:textColor="#ffffff" android:layout_width="fill_parent"
					android:textSize="15dp" android:layout_height="wrap_content" />
					

				<!-- agri part -->
				
				<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:orientation="vertical" android:scrollbars="vertical|horizontal"
					android:id="@+id/label_agri">
					<TextView android:id="@+id/agri_category_label"
						android:text="@string/Beneficiary_Category" android:textColor="#ffffff"
						android:layout_width="fill_parent" android:textSize="15dp"
						android:layout_height="wrap_content" />

					<TextView android:id="@+id/commune_label" android:text="@string/commune"
						android:textColor="#ffffff" android:layout_width="fill_parent"
						android:textSize="15dp" android:layout_height="wrap_content" />

					<TextView android:id="@+id/land_label" android:text="@string/amount_of_land"
						android:textColor="#ffffff" android:layout_width="fill_parent"
						android:textSize="15dp" android:layout_height="wrap_content" />

					<TextView android:id="@+id/seed_label" android:text="@string/seed_group"
						android:textColor="#ffffff" android:layout_width="fill_parent"
						android:textSize="15dp" android:layout_height="wrap_content" />

					<TextView android:id="@+id/tool_label" android:text="@string/tools"
						android:textColor="#ffffff" android:layout_width="fill_parent"
						android:textSize="15dp" android:layout_height="wrap_content" />

					<TextView android:id="@+id/partner_label" android:text="@string/partners"
						android:textColor="#ffffff" android:layout_width="fill_parent"
						android:textSize="15dp" android:layout_height="wrap_content" />
						
					<TextView android:id="@+id/participating_mchn"
						android:text="@string/participating_mchn"
						android:textColor="#ffffff"
						android:visibility="visible" android:layout_width="fill_parent"
						android:layout_height="wrap_content" />	
						
<!-- 					<TextView android:id="@+id/participating_mchn_self_label" -->
<!-- 						android:textColor="#ffffff" android:layout_width="fill_parent" -->
<!-- 						android:layout_marginLeft="15px"  -->
<!-- 						android:textSize="15dp" android:layout_height="wrap_content" /> -->
						
<!-- 					<TextView android:id="@+id/relative_participating_mchn" -->
<!-- 						android:text="@string/participating_bene" -->
<!-- 						android:textColor="#ffffff" -->
<!-- 						android:visibility="visible" android:layout_width="fill_parent" -->
<!-- 						android:layout_height="wrap_content" /> -->

					<TextView android:id="@+id/participating_relative_name"
						android:text="@string/participating_beneficiary_mchn"
						android:textColor="#ffffff" android:layout_width="fill_parent"
						android:layout_marginLeft="15px" 
						android:textSize="15dp" android:layout_height="wrap_content" />
						
<!-- 					<TextView android:id="@+id/participating_relative_mchn_name" -->
<!-- 						android:textColor="#ffffff" android:layout_width="fill_parent" -->
<!-- 						android:layout_marginLeft="15px"  -->
<!-- 						android:textSize="15dp" android:layout_height="wrap_content" /> -->

				</LinearLayout>


			</LinearLayout>
			<Button android:text="@string/update_beneficiary_edit_label"
				android:id="@+id/editFind" android:layout_marginLeft="20px"
				android:layout_marginRight="20px" android:layout_width="fill_parent"
				android:layout_height="wrap_content" />

		</LinearLayout>
	</ScrollView>
	
</LinearLayout>