<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<ScrollView android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:orientation="vertical" android:scrollbars="vertical|horizontal"
			android:visibility="gone" android:id="@+id/unedit">
			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:orientation="vertical" android:scrollbars="vertical|horizontal">
				<TextView android:id="@+id/first_label" android:text="@string/firstname"
					android:textColor="#ffffff" android:layout_width="fill_parent"
					android:textSize="15dp" android:layout_height="wrap_content" />

				<TextView android:id="@+id/last_label" android:text="@string/lastname"
					android:textColor="#ffffff" android:layout_width="fill_parent"
					android:textSize="15dp" android:layout_height="wrap_content" />

				<TextView android:id="@+id/address_label" android:text="@string/address"
					android:textColor="#ffffff" android:layout_width="fill_parent"
					android:textSize="15dp" android:layout_height="wrap_content" />

				<TextView android:id="@+id/dob_label" android:text="@string/dob"
					android:textColor="#ffffff" android:layout_width="fill_parent"
					android:textSize="15dp" android:layout_height="wrap_content" />

				<TextView android:id="@+id/sex_label" android:text="@string/sex"
					android:textColor="#ffffff" android:layout_width="fill_parent"
					android:textSize="15dp" android:layout_height="wrap_content" />

				<TextView android:id="@+id/num_ppl_label" android:text="@string/Number_of_people_in_home"
					android:textColor="#ffffff" android:layout_width="fill_parent"
					android:textSize="15dp" android:layout_height="wrap_content" />
				<!-- MCHN PART -->
				<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:orientation="vertical" android:scrollbars="vertical|horizontal"
					android:id="@+id/label_mchn">


					<TextView android:id="@+id/distro_label" android:text="@string/distribution_post"
						android:textColor="#ffffff" android:layout_width="fill_parent"
						android:textSize="15dp" android:layout_height="wrap_content" />

					<TextView android:id="@+id/bene_category_label"
						android:text="@string/Beneficiary_Category" android:textColor="#ffffff"
						android:layout_width="fill_parent" android:textSize="15dp"
						android:layout_height="wrap_content" />

					<TextView android:id="@+id/alternate_collector" android:text="@string/alternate"
						android:textColor="#ffffff" android:layout_width="fill_parent"
						android:textSize="15dp" android:layout_height="wrap_content" />

					<TextView android:id="@+id/mleader_label" android:text="@string/mother_leader"
						android:textColor="#ffffff" android:layout_width="fill_parent"
						android:textSize="15dp" android:layout_height="wrap_content" />

					<TextView android:id="@+id/visit_label" android:text="@string/visit_mother_leader"
						android:textColor="#ffffff" android:layout_width="fill_parent"
						android:textSize="15dp" android:layout_height="wrap_content" />

					<TextView android:id="@+id/participating_agri"
						android:text="@string/participating_agri"
						android:textColor="#ffffff"
						android:visibility="visible" android:layout_width="fill_parent"
						android:layout_height="wrap_content" />
						

					<TextView android:id="@+id/participating_relative_name"
						android:text="@string/participating_beneficiary_agri"
						android:textColor="#ffffff" android:layout_width="fill_parent"
						android:layout_marginLeft="15px" 
						android:textSize="15dp" android:layout_height="wrap_content" />

						
				</LinearLayout>
			</LinearLayout>

			<Button android:text="@string/update_beneficiary_edit_label"
				android:id="@+id/editFind" android:layout_marginLeft="20px"
				android:layout_marginRight="20px" android:layout_width="fill_parent"
				android:layout_height="wrap_content" />

		</LinearLayout>
	</ScrollView>

</LinearLayout>