<?xml version="1.0" encoding="utf-8"?>

<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/smsViewScroll"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"	android:layout_height="wrap_content"
		android:orientation="vertical" android:layout_marginRight="4dp">
		
	    <TableLayout android:stretchColumns="1"
	    	android:layout_width="match_parent" android:layout_height="wrap_content">
	    	
	        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
	            <TextView
	            	android:layout_width="wrap_content" android:layout_height="wrap_content"
	            	android:id="@+id/phoneNumView" android:text="@string/PhoneNum"
	            	android:layout_marginLeft="4dp" android:layout_marginTop="4dp">
	            </TextView>
	            <EditText
	            	android:layout_width="0dp" android:layout_height="wrap_content"
	            	android:id="@+id/phoneEditText" android:layout_marginLeft="4dp" 
	            	android:layout_marginTop="4dp" android:inputType="phone"> <requestFocus/>
	            </EditText>
	        </TableRow>
	        
	        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
	            <TextView
	            	android:layout_width="wrap_content" android:layout_height="wrap_content"
	            	android:id="@+id/smsNumMessagesLabel" android:text="@string/smsNumMessagesLabel"
	            	android:layout_marginLeft="4dp" android:layout_marginTop="4dp">
	            </TextView>
	            <TextView
	            	android:id="@+id/smsNumMessagesView" android:layout_width="0dp" 
	            	android:layout_height="wrap_content" android:layout_marginLeft="4dp" 
	            	android:layout_marginTop="3dp" android:maxLines='1'>
	            	</TextView>
	        </TableRow>
	   </TableLayout>
	        
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView
            	android:layout_width="wrap_content" android:layout_height="wrap_content"
            	android:id="@+id/contentsLabelView" android:text="@string/smsContentsLabel"
            	android:layout_marginLeft="4dp" android:layout_marginTop="4dp">
            </TextView>
        </TableRow>
        
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content"> 
        	<TextView
            	android:id="@+id/contentsTextView" android:layout_width="match_parent" 
            	android:layout_height="wrap_content" android:layout_marginLeft="4dp" 
            	android:layout_marginTop="3dp" android:background="@color/white_color"
            	android:textColor="@color/black_color">
            </TextView>
        </TableRow>
	    
	    <TableRow android:layout_height="wrap_content" android:layout_width="match_parent">
	        <Button
	        	android:id="@+id/sendButton" android:drawableLeft="@drawable/ic_menu_send"
	        	android:layout_width="wrap_content" android:layout_height="wrap_content" 
	        	android:layout_marginLeft="100dp" android:layout_marginRight="100dp"
	        	android:text="@string/Send" android:layout_marginTop="10dp">
	        </Button>
	    </TableRow>
	    
	</LinearLayout>

</ScrollView>