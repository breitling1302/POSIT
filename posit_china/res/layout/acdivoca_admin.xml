<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:gravity="center"
	android:scrollbars="vertical"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent">

	<ImageView
		android:id="@+id/acdivoca_logo"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
		android:src="@drawable/acdivoca_logo"/>

	<TextView android:text="@string/admin_welcome"
		android:layout_width="wrap_content"
		android:layout_gravity="center" android:textSize="20dp"
		android:layout_height="wrap_content" />
		
	<TextView 
		android:id="@+id/manage_event_text_view"
		android:text="@string/manage_event_directions"
		android:textSize="14dp"
		android:layout_marginLeft="20px"
		android:visibility="visible"
		android:layout_width="wrap_content"
		android:layout_gravity="center" 
		android:layout_height="wrap_content" />
		
  
	<ProgressBar
		android:id="@+id/fileload_progressbar"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         style="@android:style/Widget.ProgressBar.Small"
         android:visibility="invisible"
         android:layout_marginRight="5dp" />
		

